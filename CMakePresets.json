{
  "version": 1,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "clang-debug",
      "displayName": "Clang Debug",
      "description": "Default build options for Clang",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/builds/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Werror",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "yes",
        "DEALII_BUILD_MODE": "Debug"
      }
    },
    {
      "name": "clang-release",
      "displayName": "Clang Release",
      "description": "Default build options for Clang",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/builds/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Werror",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "yes",
        "DEALII_BUILD_MODE": "Release"
      }
    }
  ]
}
